<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExclusionFacilityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/facility_id"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExclusionFacilityIdResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tvExclusionFacilityId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvExclusionFacilityId"
            tools:text="1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExclusionOptionsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/options_id"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tvExclusionFacilityId"
            app:layout_constraintTop_toBottomOf="@id/tvExclusionFacilityId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExclusionsOptionsIdResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tvExclusionOptionsId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvExclusionOptionsId"
            tools:text="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/tvExclusionFacilityId"
            app:layout_constraintEnd_toEndOf="@id/tvExclusionFacilityIdResult"
            app:layout_constraintTop_toBottomOf="@id/tvExclusionOptionsId"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>